import javax.swing.JFrame;
import javax.swing.JLabel;

public class FirstGUI 
{
	public static void main(String[] args)
	{
		Abc obj = new Abc();
	}
}

class Abc extends JFrame
{
	public Abc()
	{
		setVisible(true);
		setSize(400,400);//400px x 400px Frame
		
		//To Show Text
		JLabel l = new JLabel("Hello");
		add(l);
		
	}
}